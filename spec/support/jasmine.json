{
  "spec_dir": "spec",
  "spec_files": [
    "**/*[sS]pec.ts"
  ],
  "helpers": [
    "helpers/**/*.js"
  ],
  "stopSpecOnExpectationFailure": false,
  "random": false,
  "reporters": [
    {
      "name": "jasmine-spec-reporter",
      "options": {
        "displaySuccessfulSpec": false,
        "displaySpecDuration": true,
        "displayPendingSummary": false,
        "displayStacktrace": "summary",
        "colors": {
          "success": "green",
          "failure": "red",
          "pending": "cyan"
        }
      }
    }
  ]
}
